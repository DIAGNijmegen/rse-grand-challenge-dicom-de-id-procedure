{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/sop-class-schema",
    "type": "object",
    "required": [
        "version",
        "default",
        "dicomStandardVersion",
        "justification",
        "sopClass"
    ],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^0.\\d{8}.\\d+$"
        },
        "default": {
            "$ref": "#/$defs/defaultEnum"
        },
        "dicomStandardVersion": {
            "type": "string",
            "minLength": 1
        },
        "justification": {
            "type": "string",
            "minLength": 1
        },
        "sopClass": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "default",
                    "justification",
                    "tag"
                ],
                "properties": {
                    "default": {
                        "$ref": "#/$defs/defaultEnum"
                    },
                    "justification": {
                        "type": "string",
                        "minLength": 1
                    },
                    "tag": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "required": [
                                "default",
                                "justification"
                            ],
                            "properties": {
                                "default": {
                                    "$ref": "#/$defs/defaultEnum"
                                },
                                "justification": {
                                    "type": "string",
                                    "minLength": 1
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false,
    "$defs": {
        "defaultEnum": {
            "type": "string",
            "enum": [
                "X",
                "K",
                "D",
                "Z",
                "U",
                "R"
            ]
        }
    }
}
